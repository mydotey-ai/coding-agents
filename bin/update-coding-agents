#!/bin/bash

set -x

source ~/bin/enable-proxy

claude update
npm upgrade -g @musistudio/claude-code-router

claude plugin marketplace update claude-plugins-official
claude plugin marketplace update superpowers-marketplace
claude plugin marketplace update awesome-claude-skills
claude plugin marketplace update ui-ux-pro-max-skill
claude plugin marketplace update jarrodwatts/claude-hud

npm upgrade -g happy-coder

uv tool upgrade specify-cli

opencode upgrade
cd ~/.config/opencode/superpowers
git pull
